{
  "main": "./src/index.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "cd src && npm install",
    "clean": "rimraf ./dist",
    "pack": "electron-packager ./src --platform=win32 --arch=x64 --overwrite --out ./dist",
    "build:exe": "set DEBUG=electron-windows-installer:main && node ./tools/createInstaller.js",
    "build:msi": "msiwrapper-compiler --config=./dist/msi-wrapper.xml",
    "dist": "npm run clean && npm run pack && npm run build:exe && npm run build:msi"
  },
  "devDependencies": {
    "electron": "^1.7.5",
    "electron-packager": "^8.7.2",
    "electron-winstaller": "^2.6.3",
    "msiwrapper-compiler": "^1.0.2",
    "rimraf": "^2.6.1",
    "string-template": "^1.0.0"
  }
}
